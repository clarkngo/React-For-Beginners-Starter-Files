.order-enter
  transform: translateX(-120%)
  transition 0.5s
  max-height 0px
  padding 0 !important
  &.order-enter-active
    max-height 60px
    transform: translateX(0)
    padding 2rem 0 !important

.order-exit
  transition 0.5s
  transform: translateX(0)
  &.order-exit-active
    transform: translateX(120%)

.count-enter
  transition 0.5s
  transform translateY(100%)
  &.count-enter-active
    transform translateY(0)

.count-exit
  transition 0.5s
  position absolute
  left 0
  right 0
  transform translateY(0)
  &.count-exit-active
    transform translateY(-100%)
